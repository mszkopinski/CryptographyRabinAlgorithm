<UserControl x:Class="RabinEncryption.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:RabinEncryption.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2c2c2c">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Height="30" Width="250" Grid.Row="0" Grid.Column="0" 
                 Text="{Binding StringToEncrypt}" VerticalContentAlignment="Center"/>
        <TextBox Height="30" Width="250" Grid.Row="1" Grid.Column="0" 
                 Text="{Binding StringToDecrypt}" VerticalContentAlignment="Center"/>
        <Button Command="{Binding EncryptMessageCommand}" Height="70" Width="250" Grid.Row="0" Grid.Column="1"
                Background="LawnGreen" FontSize="30" FontWeight="Bold">
            ENCRYPT
        </Button>
        <Button Command="{Binding DecryptMessageCommand}" Height="70" Width="250" Grid.Row="1" Grid.Column="1"
                Background="Red" FontSize="30" FontWeight="Bold">
            DECRYPT
        </Button>
        <Label Foreground="White" Height="50" Width="250" Grid.Row="0" Grid.Column="2"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding EncryptedString}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseClick" >
                    <i:InvokeCommandAction Command="{Binding CopyToClipboardCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Foreground="White" Height="50" Width="250" Grid.Row="1" Grid.Column="2"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding DecryptedString}"/>
    </Grid>
</UserControl>